<div class="container item-detail">
  <section>
    <div class="item-container">
      <% unless @item.department.blank? %>
        <div class="breadcrumb">
          <%= link_to "#{@item.department}", "/postings/#{parameterlize(@item.department)}" %>
          <% unless @item.subcategory.blank? %>
            &nbsp; / &nbsp;
            <%= make_subcategory_link(@item.subcategory) %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
  <section>
