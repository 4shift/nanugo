<script>
$(function(){
  // THUMBNAIL IMAGE SWAP
  $('.item-photo-thumbnail').click(function(e) {
    $('#item-photo-main').attr('src', e.target.src)
  })

  // FLAG
  $('.flag').click(function(e) {
    $('#flag-modal').modal('show')
  })
  $('#flag-modal .btn-primary').click(function(e) {
    Y.flag("683de78a1f3cee1a", $('#flag-modal input').val()).then(function() {
      $('#flag-modal').modal('hide')
      $('.flag').html('Thank you').off('click').css({cursor: 'inherit'})
    })
  })

  // yrd tutorial popup
  $('[data-toggle="popover"]').popover();
})
</script>
