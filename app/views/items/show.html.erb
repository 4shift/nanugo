          <ul class="list-inline thumbnails">
            <li class="thumbnail">
              <%= image_tag @item.first_image, class: "img-responsive item-photo-thumbnail" %>
            </li>
            <% unless @item.second_image.blank? %>
              <li class="thumbnail">
                <%= image_tag @item.second_image, class: "img-responsive item-photo-thumbnail" %>
              </li>
            <% end %>
            <% unless @item.third_image.blank? %>
              <li class="thumbnail">
                <%= image_tag @item.third_image, class: "img-responsive item-photo-thumbnail" %>
              </li>
            <% end %>
            <% unless @item.fourth_image.blank? %>
              <li class="thumbnail">
                <%= image_tag @item.fourth_image, class: "img-responsive item-photo-thumbnail" %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="item-details-container">
        <section class="item-title-and-price">
          <div class="title">
