<div class="postings">
  <div class="container">
    <ul class="nav nav-tabs" id="tabs">
      <li class="active" role="presentation">
        <a data-toggle="tab" href="#trending">Now Trending</a>
      </li>
      <li role="presentation">
        <a data-toggle="tab" href="#shop">Categories</a>
      </li>
    </ul>
    <a class="posting-template hidden card posting-container item-container">
      <div class="image">
        <img>
        <div class="status hidden"></div>
      </div>
      <section class="details">
        <h4 class="title"></h4>
        <h4 class="price-container">
          <i class="yrd-symbol"></i>
          <span class="price"></span>
        </h4>
      </section>
      <div class="badge hidden"></div>
    </a>
    <a class="wish-template hidden card wish-container item-container">
      <div class="image">
        <img>
        <div class="btn btn-primary btn-wish">Make a Wish</div>
      </div>
      <section class="details">
        <h4 class="title"></h4>
        <h5 class="description"></h5>
      </section>
    </a>
    <div class="tab-content">
      <div class="tab-pane active" id="trending">
        <div class="results">
          <div class="card-holder" id="infinite-container">
            <%= render @items %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
