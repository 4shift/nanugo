        <li class="yrd-balance">
          <a href="#" data-target="#help-yrd-modal" data-toggle="modal">
            <%= image_tag "g-button.png", class: "go-symbol", alt: "나누고 단추", size: "20x20" %>
            5,000
          </a>
        </li>
      <% else %>
        <li class="give-button hidden-xs">
          <%= link_to "나누기", post_path %>
        </li>
        <li class="postings-button hidden-xs">
          <%= link_to "상품보기", postings_path %>
        </li>
        <li class="dropdown user-details hidden-xs">
          <a aria-expanded="false" class="dropdown-toggle" data-toggle="dropdown" href="#">
