      <li class="search">
        <form class="search" action="/postings" accept-charset="UTF-8" method="get">
          <i class="icon-search"></i>
          <input type="search" name="q" id="q" placeholder="필요한 물건 찾기">
        </form>
      </li>
      <% unless user_signed_in? %>
        <li class="hidden-xs">
          <a href="#services">서비스</a>
        </li>
        <li class="hidden-xs hidden-sm">
          <a href="#download" class="dispatch-mobile-conversion">다운로드</a>
        </li>
        <li class="login hidden-xs">
          <a href="#" data-target="#login-modal" data-toggle="modal">로그인</a>
        </li>
        <li class="signup hidden-xs">
          <a href="#" data-target="#signup-modal" data-toggle="modal" class="btn btn-outline">회원가입</a>
        </li>
        <li class="signup hidden-sm hidden-md hidden-lg">
          <a href="#" data-target="#signup-modal" data-toggle="modal">회원가입</a>
